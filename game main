	Sleep(300);
	printf("苇");
	Sleep(150);
	printf("海");
	Sleep(150);
	printf("信");
	Sleep(150);
	printf("标");
	Sleep(150);
	printf("》");
	Sleep(2000);
	system("CLS");
	
	printf("是否查看背景故事？\n Y or N\n");
	cin >> op;
	if(op=='Y'){
		system("CLS");
		print_story();
	} 
	else cout << 114514;
