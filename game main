#include <conio.h>
#define int long long 
using namespace std;
char op;
void print_story(){
	printf("这是一个古老的王国，\n");
	Sleep(2000);
	printf("你已经沉睡了439年，\n");
	Sleep(2000);
	printf("今年是公元4039年，\n");
	Sleep(2000);
	printf("你作为失去空灵曈的落魄风神，\n");
	Sleep(2000);
	printf("你还要放任这个逐渐崩坏的世界，继续沉睡吗？\n");
	Sleep(2000);
	printf("Y or N\n");
	cin >> op;
	if(op=='Y') exit(0);
	system("CLS");
}

signed main(){
	printf("《");
